@import url('https://fonts.googleapis.com/css2?family=Oswald&display=swap');

$font: 'Oswald', sans-serif;
.mainContainer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;

  video#passwordPage {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    object-fit: cover;
  }

  .accessArea {
    position: absolute;
    z-index: 2;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    max-width: 600px;
    color: #fff;
    padding-top: 100px;

    .logo_ {
      max-width: 100%;
      margin-bottom: 150px;
      margin-top: 50px;
    }

    .text, .text_2nd {
      font-family: $font;
      font-size: 50px;
      line-height: 150%;
    }

    #password {
      border: 1px solid silver;
      padding: 7px;
      width: 100%;
      max-width: 320px;
      margin-top: 30px;
    }

    .actions {
      .btn_ {
        width: 100%;
        max-width: 320px;
        margin-top: 5px;
        background-color: #232323;
        border: 1px solid #232323;

        svg {
          stroke: transparent;
          fill: #fff;
        }
      }
    }

  }
}