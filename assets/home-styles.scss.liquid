#shopify-section-footer{
    .footer-top {
        padding: 70px 0;
    }
    .site-footer{
        background: #C4C4C4;
        .footer-newsletter {
            margin-bottom:0;
        }
        .footer-social {
            margin-bottom: 30px;
        }
    }
    .site-footer, .foot-title{
        color: #181818;
        font-size: 18px;
        font-weight: 400;
    }
    .site-footer .foot-link>span {
        color: #181818;
        font-weight: 500;
    }
    .groups-icon-app svg{
        width: 138px;
        height: 40px;
    }
    .newsletter .input-group-field{
        background: #FFFFFF;
        border: 1px solid #C4C4C4;
        box-sizing: border-box;
        font-size: 12px;
        line-height: 120%;
    }
    .foot-title{
        font-family: Bebas Neue;
        line-height: 160%;
        letter-spacing: 0.03em;
        margin-bottom: 12px;
        padding-bottom: 0;
    }
    .col-footer .foot-link{
        font-family: Work Sans;
        font-size: 14px;
        line-height: 120%;
    }
    .footer-newsletter .newsletter-des{
        font-family: Work Sans;
        font-size: 12px;
        line-height: 14.4px;
        margin-bottom: 15px;
        font-weight: 500;
    }
    .site-footer .footer-newsletter .input-group-field {
        min-width: 210px;
        height: 30px;
        padding-left: 10px;
    }
    .site-footer .newsletter .btn{
        background: transparent;
        border-color: transparent;
        position: absolute;
        color: #C4C4C4;
        top: 1px;
        padding: 5px 0 0 !important;
        min-width: auto;
        left: 190px;
    }
    .site-footer .container .row{
        .col-footer li{
            margin-bottom: 10px;
        }
    }
    .footer-mb-dropdow {
        display: none;
        padding-right: 10px;
        padding-left: 10px;
    }
}
.h-desktop {
    .label {
        padding: 0;
        text-align: left;
    }
    .remove {
        color: #000;
    }
}
