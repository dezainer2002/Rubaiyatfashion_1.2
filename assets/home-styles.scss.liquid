@media (min-width: 1200px) {
    #shopify-section-footer .site-footer .footer-top .container{
        max-width: 1440px;
        .footer-col-left {
            flex: 0 0 75%;
            max-width: 75%;
            .row .col-xl-3{
                flex: 0 0 25%;
                max-width: 25%;
            }
        }
        .footer-col-right {
            flex: 0 0 25%;
            max-width: 25%;
        }
    }
}

@media (max-width: 767px) {
    #shopify-section-footer{
        .footer-top {
            padding: 22px 0 0;
        }

        .foot-title {
            line-height: 17.6px;
            margin-bottom: 15px;
        }

        .site-footer {
            .footer-col-left{
                margin-bottom: 30px;

                .foot-title {
                    border-color: #a6a6a6;
                    line-height: 18px;
                    margin: 0;
                    padding: 21px 0 16px 40px;
                }
                .col-footer{
                    padding: 0 26px;
                    margin: 0;

                    .dropdow-mb:after {
                        right: auto;
                        left: 0;
                        top: 19px;
                        font-size: 24px;
                    }
                }
            } 

            .footer-social {
                margin-bottom: 40px;
            }
        }

        .groups-icon-app { 
            a {
                margin: 0 3px;
            }
        }
    }
    body.theme-rtl {
        #shopify-section-footer .site-footer .footer-col-left {
            .foot-title {
                padding: 21px 40px 16px 0;
            }
            .col-footer .dropdow-mb:after {
                right: 0;
                left: auto;
            }
        }
    }
}

@media (max-width: 767px) {
    #shopify-section-footer .site-footer 
    // .footer-newsletter{
    //     display: none;
    // }
    .groups-icon-app{
        width: 100% !important;
        text-align: center;
    }
    .footer-social .social-title {
