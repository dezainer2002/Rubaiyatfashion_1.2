    overflow: hidden;
  }
  .template-product .slider-nav .product-single__media img{
    max-width: 170px;
    max-height: 180px;
    padding: 0px;
  }
  .products-grid .product-image .product-grid-image{
    width: 330px;
    height: 405px;
  }
}
