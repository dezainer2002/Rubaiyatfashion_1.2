<div class="custom-width">
  <div class="main__imageText">
    <div class="main__imageText--content">
      {% if section.settings.title != blank %}
      <h2 class="content__title">
        {{ section.settings.title }}
      </h2>
      {% endif %}
      {% if section.settings.subtitle != blank %}
      <h3 class="content__subtitle">
        {{ section.settings.subtitle }}
      </h3>
      {% endif %}
      {% if section.settings.text != blank %}
      <div class="content__text">
        {{ section.settings.text }}
      </div>
      {% endif %}

      {% if section.settings.text-bottom != blank %}
      <h2 class="h2-note">{{ section.settings.text-bottom }}</h2>
      {% endif %}
      {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="btn content__button">
        {{ section.settings.button_label }}
      </a>
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Custom Image Text V2",
    "settings": [
      {
        "type" : "text",
        "id" : "title",
        "label" : "Heading",
        "default" : "HOW TO JOIN "
      },
      {
        "type" : "text",
        "id" : "subtitle",
        "label" : "Sub Heading",
        "default" : "The Ruba Rewards App "
      },
      {
        "type" : "richtext",
        "id" : "text",
        "label" : "Sub Text"
      },
	  {
        "type" : "text",
        "id" : "text-gr",
        "label" : "Text Download",
        "default" : "Download Now"
      },
      {
        "type" : "text",
        "id" : "text-bottom",
        "label" : "Text Bottom",
        "default" : "Or simply join now!"
      },
      {
        "type" : "text",
        "id" : "button_label",
        "label" : "Button Label"
      },
      {
        "id": "button_link",
        "type": "url",
        "label": "Button link"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

