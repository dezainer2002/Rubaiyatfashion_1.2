{% if settings.enable_multilang and multilang contains '|' %}
<span class="lang1">
  {{ multilang | split: '|' | first | strip }}
</span>
<span class="lang2">
  {{ multilang | split: '|' | last | strip }}
</span>
{% else %}
<span>
  {% assign lang = multilang | split: '|' | first %}
  {% if lang == 'COLOR' and shop.locale == 'ar'%}
    اللون
  {% elsif lang == 'SIZE' and shop.locale == 'ar' %}
    بحجم
  {% else %}
    {{ lang }}
  {% endif %}
</span>
{% endif %}